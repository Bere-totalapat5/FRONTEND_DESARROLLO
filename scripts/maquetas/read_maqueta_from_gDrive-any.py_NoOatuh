def dfnt( value ):
    if isinstance( value, unicode ):
        # if debugis: print "UTF8", value.encode("utf-8")
        value =  value.encode("utf-8")
    if isinstance(value, basestring ):
        value = db.escape_string(value.strip())
    elif value is None:
        value = ""
    return value

